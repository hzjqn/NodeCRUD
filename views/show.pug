article.card.persona
    h1 #{result.found.nombre + " " + result.found.apellido}
    h3 Id: #{result.found.id}
    h3 Nombre: #{result.found.nombre}
    h3 Apellido: #{result.found.apellido}
    h3 Email: #{result.found.email}
    h3 Confirmado: #{result.found.confirmado ? "Si" : "No"} 

    aside.actions
        a(data-action="goto" href="/persona/"+result.found.id+'/edit') <i class="fas fa-edit"></i> Editar
        
        form(action="/persona/"+result.found.id, data-success="/persona/index", method="DELETE")
            button(type="submit") <i class="fas fa-trash"></i> Borrar

